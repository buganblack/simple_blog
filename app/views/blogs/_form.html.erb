<head>
  <meta charset="UTF-8">
  <title>Title</title>
  <meta name="description" content="sample text,sample tex">
  <meta name="keywords" content="word1,word2,word3">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"/>
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta property="og:title" content="">
  <meta property="og:description" content="sample text,sample tex">
  <meta property="og:url" content="">
  <meta property="og:site_name" content="">
  <meta property="og:type" content="blog">
  <meta property="fb:admins" content="">
  <meta property="og:image" content="assets/images/common/ogp.png">
  <meta name="apple-mobile-web-app-title" content="">
  <link rel="shortcut icon" href="assets/images/common/favicon.ico">
  <link rel="apple-touch-icon-precomposed" href="images/common/apple-touch-icon-precomposed.png">
</head>

<body id="js-body">
  <div id="fb-root"></div>

  <noscript class="for-no-js">Javascriptを有効にしてください。</noscript>
  <div class="for-old">お使いのOS・ブラウザでは、本サイトを適切に閲覧できない可能性があります。最新のブラウザをご利用ください。</div>

  <input type="hidden" value="./" id="js-base-url">

  <div class="l-wrap js-wrap">
    <div class="l-header l-header-admin js-header">
      <div class="l-header-top u-clear">
        <div class="l-header-logo">
          <%= link_to root_path, class: "logo" do %>
            <%= image_tag("logo-admin.png", height: "28", width: "138") %>
          <% end %>
        </div>
        <div class="l-header-text">
          <p>ADMIN PAGE</p>
        </div>
      </div>
    </div>

    <div class="l-container u-clear">
      <div class="l-main js-main">
      <div class="l-main-block"></div>
      <% if @blog.errors.present? %>
        <% @blog.errors.full_messages.each do |message| %>
          <div style="color: red;" id="flash"><%= message  %></div>
        <% end %>
      <% end %>
      <label for="image" class="form-title">EYE CATCH IMAGE
        <div class="form-file u-clear" style="padding-left: 10px">
          <% if @blog.eye_catch.present? %>
            <%= @blog.eye_catch_file_name %>
          <% end %>
          <span class="form-file-button">UPLOAD</span>
        </div>
      </label>
      <%= f.file_field :eye_catch, class: "input input-image", id: "image" %>
      <label for="title" class="form-title">TITLE</label>
      <div class="form-body">
        <%= f.input_field :title, class: "input input-text", id: "title" %>
      </div>
      <label for="contents" class="form-title">CONTENTS</label>
      <div class="form-textarea">
        <%= f.input_field :contents, class: "input input-contents", id: "inquiry" %>
      </div>
      <%= f.submit "Submit", class: "form-button button button-text" %>
      <%= link_to "Back", blogs_admin_index_path, class: "button button-text form-button" %>
    </div>
    <div class="l-footer l-footer-admin">
      <div class="l-footer-copyright">
        <small class="copyright">&copy;copyright</small>
      </div>
    </div>
  </div>
</body>

<% content_for :extra_javascripts do %>
  <%= javascript_include_tag "admin" %>
<% end %>
